{
  "name": "beyond-audit-website",
  "version": "1.0.0",
  "description": "Beyond Audit - Professional accounting services website with Node.js and React",
  "main": "server.js",
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "npm run install-all && npm run build:frontend",
    "install-all": "npm install",
    "vercel-build": "npm run install-all && npm run build:frontend",
    "postinstall": "cd frontend && npm install",
    "build:frontend": "npm-run-all frontend:install frontend:build",
    "frontend:install": "cd frontend && npm install",
    "frontend:build": "cd frontend && cross-env CI=false npm run build"
  },
  "keywords": [
    "accounting",
    "audit",
    "tax",
    "financial",
    "beyond-audit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.1"
  }
}
